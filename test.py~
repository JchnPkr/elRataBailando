import time
import pyautogui
from tkinter import *

root = Tk()
root.title('El raton bailando')
w = 260
h = 50
ws = root.winfo_screenwidth()
hs = root.winfo_screenheight()
x = (ws/5) - (w/2)
y = (hs/5) - (h/2)
root.geometry('%dx%d+%d+%d' % (w, h, x, y))
root.configure(bg='blue')

class MouseMover:
	def __init__(self, stepsize, speed):
		self.stepsize = stepsize
		self.speed = speed
		self.stop = True
		
	def move(self):
		print("raton...")
		if not self.stop:
			self.stepsize = self.stepsize * -1
			pyautogui.moveRel(self.stepsize, 0)
			
mover = MouseMover(10, 1000)
			
def bailando():
		if button.config('relief')[-1] == 'raised':
			button.config(relief="sunken")
			button.config(text="duerme")
			mover.stop = False
			moveLoop()
		else:
			mover.stop = True
			button.config(relief="raised")
			button.config(text="bailando")

def moveLoop():
	mover.move()
	root.after(mover.speed, moveLoop())

button = Button(root, 
                text="bailando", 
                bg="yellow",
                activebackground="DeepPink2",
                relief="raised", 
                command=bailando)
button.config(highlightbackground="DeepPink3")
button.place(relx=.5, rely=.5, anchor="c")

root.mainloop()

